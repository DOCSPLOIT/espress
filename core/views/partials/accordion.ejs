<header>
  <p class="h2 border-bottom border-primary"><%- data.name %></p>
  <p style="color: var(--bs-gray-400)">
    <!-- Lorem ipsum dolor, sit amet consectetur adipisicing elit. Soluta optio
    recusandae vel eos libero, dolorum, molestias accusamus aliquam consequatur
    illo a error sit omnis -->
  </p>
  <h5 class="border-bottom border-primary">ROUTES</h5>
  <div class="accordion" id="accordionApiScheme">
    <% for( let datum of data.routers ) { %>
    <div class="accordion-item">
      <h2 class="accordion-header" id="heading<%- datum.name%>">
        <button
          class="accordion-button text-white collapsed"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#collapse<%- datum.name+datum.method%>"
          data-method="<%- datum.method%>"
          aria-expanded="false"
          aria-controls="collapse<%- datum.name+datum.method%>"
        >
          <p class="p-1 my-0 rounded"><%- datum.method %></p>
          <h class="p-1 mx-3"><%- datum.name%></h>
          <i class="badge bg-secondary"><%- datum.path %></i>
          <!-- <i class="badge bg-warning text-dark mx-1">No Auth</i> -->
        </button>
      </h2>
      <div
        id="collapse<%- datum.name+datum.method%>"
        class="accordion-collapse collapse"
        aria-labelledby="heading<%- datum.name+datum.method%>"
        data-bs-parent="#accordionApiScheme"
      >
        <div class="accordion-body">
          <h5 class="border-bottom border-secondary my-1">Request</h5>
          <% if (datum.method!=='GET') { %>
          <div class="my-2">
            Body Type :
            <i class="badge bg-primary"><%- datum.bodyType%></i>
          </div>
          <% } else {%>
          <div class="my-2">
            Allow Queries:
            <i class="badge bg-primary"><%- datum.schema.length>0 %></i>
          </div>
          <% }%>
          <table
            class="table table-striped text-center table-responsive table-dark"
          >
            <thead>
              <tr>
                <th scope="col">Property</th>
                <th scope="col">Type</th>
                <th scope="col">Format</th>
                <th scope="col">Required</th>
              </tr>
            </thead>
            <tbody>
              <% for( let schema of datum.schema ) { %>
              <tr>
                <td><%- schema.property%></td>
                <td><%- schema.type%></td>
                <td><%- schema.format%></td>
                <td><i class="badge bg-info">true</i></td>
              </tr>
              <% } %>
            </tbody>
          </table>
          <h5 class="border-bottom border-secondary my-3">Responses</h5>
          <table class="table table-striped text-center table-dark">
            <thead>
              <tr>
                <th>Status</th>
                <th>Info</th>
                <th>Response</th>
              </tr>
            </thead>
            <tbody>
              <% for( let response of datum.responses ) { %>
              <tr>
                <td>
                  <% if (response.status===200) { %>
                  <i class="badge bg-success text-dark"
                    ><%- response.status%></i
                  >
                  <% } else {%>
                  <i class="badge" style="background: var(--bs-pink)"
                    ><%- response.status%></i
                  >
                  <% } %>
                </td>
                <td><small><%- response.reason%></small></td>
                <td><code><%- JSON.stringify(response.response)%></code></td>
              </tr>
              <% } %>
            </tbody>
          </table>
          <h5 class="border-bottom border-secondary my-3">Example</h5>
          <div class="card">
            <code style="white-space: pre-line; color: wheat">
              <%- datum.example %>
            </code>
          </div>
        </div>
      </div>
    </div>
    <% } %>
  </div>
</header>
